{
  "$schema": "./node_modules/oxlint/configuration_schema.json",
  "env": {
    "browser": true,
    "es2024": true
  },
  "plugins": [
    "react",
    "typescript"
  ],
  "categories": {
    "correctness": "error" 
  },
  "rules": {
    "eqeqeq": "error",
    "no-undef": "error",
    "react/jsx-no-undef": "error",
    "react/jsx-key": "error",
    "react/no-unknown-property": "error",
    
    "no-console": "off",
    "no-debugger": "warn"
  },
  "settings": {
    "react": {
      "version": "19"
    }
  },
  "ignorePatterns": ["dist", "node_modules"]
}
